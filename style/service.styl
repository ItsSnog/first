.web_dev, .branding
	img
		opacity 0.3
		transition 0.5s
		&:hover
			opacity 1
			
	h1
		color #222222
		font-size 60px
		font-weight 100
		span
			font-weight 600
	p
		color #777777
.branding
	background-color #fafafa
.img_branding_width_mobile
	display none
.services .list_services
	.row
		padding 0
		.list_item
			h4
				color #222222
			p
				color #a2a2a2
			.row
				padding 25px 0
.list_services .list_item .img_item
	img
		align-self center
		margin auto
	display flex
	height 70px
	width 70px
	background-color black
	border-radius 50%
	margin-left 10px
.services .row
	padding 50px 0
@media screen and (min-width: 768px)
	.web_dev, .branding
		.row
			display flex
			.img_web_dev, .img_brand
				align-self center
@media screen and (max-width: 767px)
	.img_branding_width_mobile
		display block
	.img_web_dev, .img_branding_width_mobile
		margin-top 40px
	.img_brand
		display none
	.web_dev h1, .branding h1
		font-size 40px
	.services .row .list_services .list_item
		height auto
		.row
			padding 20px 0

	